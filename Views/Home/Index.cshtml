@(Html.Kendo().Grid<Sample_ASP.NET_Site.Models.Client>()
    .Name("Customers")
    .ToolBar(tb => tb.Create())
    .Pageable()
    .DataSource(dataSource => dataSource.Ajax()
        .Model(model => model.Id(c => c.ID))
        .Read("GetClients", "Home")
        .Update("UpdateClient", "Home")
        .Create("InsertClient", "Home")
        .Destroy("DeleteClient", "Home"))
    .Columns(cols =>
    {
        cols.Bound(c => c.FirstName);
        cols.Bound(c => c.LastName);
        cols.Bound(c => c.Timestamp);
        cols.Command(cmd =>
        {
            cmd.Edit();
            cmd.Destroy();
        });
    })
)